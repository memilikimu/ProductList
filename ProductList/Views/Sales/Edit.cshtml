@model SalesView


<h1>Edit Penjualan</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Produk</label><br />
        <input asp-for="Product" />
        <span asp-validation-for="Product" style="color:red"></span>
    </div>
    <div>
        <label>Harga</label><br />
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" style="color:red"></span>
    </div>
    <div>
        <label>Jumlah</label><br />
        <input asp-for="Amount" type="number" />
        <span asp-validation-for="Amount" style="color:red"></span>
    </div>
    <div>
        <label>Harga Jual</label><br />
        <input asp-for="SellPrice" type="number" step="0.01" />
        <span asp-validation-for="SellPrice" style="color:red"></span>
    </div>
    <div>
        <label>Jumlah Penjualan</label><br />
        <input asp-for="SellAmount" type="number" step="0.01" />
        <span asp-validation-for="SellAmount" style="color:red"></span>
    </div>
    <br />
    <button type="submit">Simpan Perubahan</button>
    <a href="/Sale/Index">Batal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}